{
  "extends": [
    "standard",
    "plugin:react/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard"
  ],
  "globals": {
    "DOMParser": false,
    "XMLSerializer": false,
    "FormData": false,
    "google": false,
    "FileReader": false
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "bracketSpacing": false,
        "semi": false,
        "printWidth": 100,
        "tabWidth": 2
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ]
  }
}
